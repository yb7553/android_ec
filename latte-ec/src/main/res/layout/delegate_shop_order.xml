<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
                                              xmlns:tools="http://schemas.android.com/tools"
                                              android:layout_width="match_parent"
                                              android:layout_height="match_parent"
                                              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/app_main"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/red_sku">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="确认订单"
                android:textSize="20sp"
                tools:ignore="HardcodedText"/>


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <!--收货人地址部分-->
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/llc_recevice_personal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/order_margin"
        android:layout_marginRight="@dimen/order_margin"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="horizontal">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="收货人"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/order_size"
                tools:ignore="HardcodedText"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shop_order_address_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text=""
                android:textColor="@color/app_main"
                android:textSize="@dimen/order_size"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_shop_order_address_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText"/>

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tv_shop_order_arrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="{fa-chevron-right}"
            android:textColor="@android:color/darker_gray"/>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/order_margin"
        android:layout_marginRight="@dimen/order_margin"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="收货地址"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/order_size"
                tools:ignore="HardcodedText"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shop_order_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center|left"
                android:text="福建福州东街口"
                android:textColor="@android:color/darker_gray"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>
    <!--收货人地址结束-->


    <!--配送地址部分-->
    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/tv_shop_order_send"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/order_margin"
        android:layout_marginRight="@dimen/order_margin"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="horizontal">


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="配送方式"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/order_size"
                tools:ignore="HardcodedText"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_sendmode"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="right|center"
                android:text="立即配送"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText,RtlHardcoded"/>


            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/tv_shop_order_send_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="{fa-chevron-right}"
                android:textColor="@android:color/darker_gray"/>

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/order_margin"
        android:layout_marginRight="@dimen/order_margin"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="可指定配送员"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/order_size"
                tools:ignore="HardcodedText"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shop_order_send_staff"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="随机"
                android:textColor="@android:color/black"
                tools:ignore="HardcodedText,RtlHardcoded"/>
            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="{fa-chevron-right}"
                android:textColor="@android:color/darker_gray"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_shop_order"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/order_margin"
        android:layout_marginRight="@dimen/order_margin"
        android:layout_weight="8"/>


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:minHeight="50dp"
        android:orientation="horizontal">


        <!--合计部分-->
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:minHeight="50dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="合计"
                android:textColor="@android:color/darker_gray"
                tools:ignore="HardcodedText"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_shop_cart_total_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="￥100"
                android:textColor="@color/app_main"
                android:textSize="20sp"
                tools:ignore="HardcodedText,RtlHardcoded"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_shop_order_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_buttom_cart"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@android:color/black"
            tools:ignore="HardcodedText"/>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>